# Shell prompt
PS1='${debian_chroot:+($debian_chroot)}[$(date "+%T")] $(whoami)@$(hostname):$(pwd) Â» '

# general aliases support
if [ -f ~/.aliases ]; then
    . ~/.aliases
fi

# quick connect function for ssh access
function connect {
  case "$1" in
    "server1") ssh root@localhost -p 22;;
    "server2") ssh user@10.10.10.2 -p 1344;;
    *) echo "Unknown Connection '$1'";;
  esac
}
